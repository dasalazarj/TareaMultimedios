<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
   	android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.telematica.tareamultimedios.MainActivity" >
    			
    <fragment android:name="cl.telematica.tareamultimedios.SelectionFragment"
    	android:id="@+id/selectionFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    			
    <fragment android:name="cl.telematica.tareamultimedios.SplashFragment"
        android:id="@+id/splashFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <fragment android:name="com.facebook.widget.UserSettingsFragment"
          android:id="@+id/userSettingsFragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />

</LinearLayout>
